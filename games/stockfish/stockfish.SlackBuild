PRGNAM=stockfish
SRCNAME=Stockfish-sf
VERSION=${VERSION:-8}
BUILD=${BUILD:-1}
TAG=${TAG:-_SBo}

case "$( uname -m )" in
  i?86) ARCH=i686 ;;
  arm*) ARCH=arm ;;
     *) ARCH=$( uname -m ) ;;
esac

CWD=$(pwd)
TMP=${TMP:-/tmp/SBo}
PKG=$TMP/package-$PRGNAM
OUTPUT=${OUTPUT:-/tmp}

set -e

if [ "$ARCH" = "i486" ]; then
  SLKFLAGS="ARCH=x86-32"
elif [ "$ARCH" = "i686" ]; then
  SLKFLAGS="ARCH=x86-32"
elif [ "$ARCH" = "x86_64" ]; then
  #SLKFLAGS="ARCH=x86-64-modern COMP=/home/gperon/myroot/opt/intel/bin/icc COMPCXX=/home/gperon/myroot/opt/intel/bin/icpc"
  SLKFLAGS="ARCH=x86-64-modern"
fi

rm -rf $PKG
mkdir -p $TMP $PKG $OUTPUT
cd $TMP
rm -rf $PRGNAM-$VERSION
tar xvzf $CWD/$SRCNAME\_$VERSION.tar.gz
cd $SRCNAME\_$VERSION
chown -R root:root .
cd src

make build ${SLKFLAGS}

# binary
mkdir -p $PKG/usr/bin
mv $PRGNAM $PKG/usr/bin
# Move the docs to our standard location first
cd ..
mkdir -p $PKG/usr/doc/$PRGNAM-$VERSION
mv AUTHORS Copying.txt Readme.md $PKG/usr/doc/$PRGNAM-$VERSION
cat $CWD/$PRGNAM.SlackBuild > $PKG/usr/doc/$PRGNAM-$VERSION/$PRGNAM.SlackBuild

mkdir -p $PKG/install
cat $CWD/slack-desc > $PKG/install/slack-desc

cd $PKG
/sbin/makepkg -c n -l y $OUTPUT/$PRGNAM-$VERSION-$ARCH-$BUILD$TAG.${PKGTYPE:-tgz}
